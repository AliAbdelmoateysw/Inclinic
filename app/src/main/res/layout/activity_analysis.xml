<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin_dashboard.Analysis"
    android:orientation="vertical"
    >


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/A_Analysis_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/AD_card_PrimaryDark"
        app:tabMode="fixed"
        app:tabTextColor="#FFF"
        >

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/A_Analysis_Diagnosis_Tab"
            android:icon="@drawable/ic_d_diagnosis"
            android:text="@string/Admin_Diagnosis"
            />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/A_Analysis_Medical_Tab"
            android:icon="@drawable/ic_d_medi_analysis"
            android:text="@string/Admin_Medical_Analysis" />


    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager

        android:id="@+id/A_Analysis_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>



</LinearLayout>







