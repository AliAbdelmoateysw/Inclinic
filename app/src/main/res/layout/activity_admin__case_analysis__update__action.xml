<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin_case_analysis.Admin_CaseAnalysis_Update_Action"
    android:background="@color/colorAccent"
    android:id="@+id/Admin_CaseAnalysis_Update_Action_id"
>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp">

        <TextView
            android:id="@+id/Update_A_Txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Part:"
            android:textColor="@color/login_form_details"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/part_Update_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/et_bg"
            android:hint="Part"
            android:padding="16dp"
            android:textColorHint="@color/login_form_details"
            android:layout_below="@id/Update_A_Txt1"
            />

        <TextView
            android:id="@+id/Update_A_Txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Pain:"
            android:textColor="@color/login_form_details"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@id/part_Update_A"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/pain_Update_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/et_bg"
            android:hint="Pain"
            android:padding="16dp"
            android:textColorHint="@color/login_form_details"
            android:layout_below="@id/Update_A_Txt2"
            />

        <TextView
            android:id="@+id/Update_A_Txt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Symptoms:"
            android:textColor="@color/login_form_details"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@id/pain_Update_A"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/symp_Update_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/et_bg"
            android:hint="Symptoms"
            android:padding="16dp"
            android:textColorHint="@color/login_form_details"
            android:layout_below="@id/Update_A_Txt3"

            />

        <TextView
            android:id="@+id/Update_A_Txt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Treatment:"
            android:textColor="@color/login_form_details"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@id/symp_Update_A"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/treat_Update_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/et_bg"
            android:hint="Treat"
            android:padding="16dp"
            android:textColorHint="@color/login_form_details"
            android:layout_below="@id/Update_A_Txt4"

            />


        <TextView
            android:id="@+id/Update_A_Txt5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Age:"
            android:textColor="@color/login_form_details"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@id/treat_Update_A"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/age_Update_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/et_bg"
            android:hint="Age"
            android:padding="16dp"
            android:textColorHint="@color/login_form_details"
            android:layout_below="@id/Update_A_Txt5"
            />

        <TextView
            android:id="@+id/Update_A_Txt6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Gender:"
            android:textColor="@color/login_form_details"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@id/age_Update_A"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/gender_Update_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/et_bg"
            android:hint="Gender"
            android:padding="16dp"
            android:textColorHint="@color/login_form_details"
            android:layout_below="@id/Update_A_Txt6"
            />


        <TextView
            android:id="@+id/Update_A_Txt7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="History:"
            android:textColor="@color/login_form_details"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@id/gender_Update_A"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/history_Update_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/et_bg"
            android:hint="History"
            android:padding="16dp"
            android:textColorHint="@color/login_form_details"
            android:layout_below="@id/Update_A_Txt7"
            />

        <TextView
            android:id="@+id/Update_A_Txt8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Times:"
            android:textColor="@color/login_form_details"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@id/history_Update_A"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/times_Update_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/et_bg"
            android:hint="Times"
            android:padding="16dp"
            android:textColorHint="@color/login_form_details"
            android:layout_below="@id/Update_A_Txt8"
            />

        <TextView
            android:id="@+id/Update_A_Txt9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Inherit:"
            android:textColor="@color/login_form_details"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@id/times_Update_A"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/inherit_Update_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/et_bg"
            android:hint="Inherit"
            android:padding="16dp"
            android:textColorHint="@color/login_form_details"
            android:layout_below="@id/Update_A_Txt9"
            />

        <TextView
            android:id="@+id/Update_A_Txt10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Country:"
            android:textColor="@color/login_form_details"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@id/inherit_Update_A"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/country_Update_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/et_bg"
            android:hint="Country"
            android:padding="16dp"
            android:textColorHint="@color/login_form_details"
            android:layout_below="@id/Update_A_Txt10"

            />

        <TextView
            android:id="@+id/Update_A_Txt11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Expected:"
            android:textColor="@color/login_form_details"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@id/country_Update_A"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/expect_Update_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/et_bg"
            android:hint="Expected "
            android:padding="16dp"
            android:textColorHint="@color/login_form_details"
            android:layout_below="@id/Update_A_Txt11"
            />

        <Button
            android:id="@+id/btn_Update_A"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expect_Update_A"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="38dp"
            android:background="@drawable/btn_bg"
            android:text="@string/update"
            android:textAllCaps="false"
            android:textColor="@color/login_form_details_medium"
            android:textSize="20dp"
            android:textStyle="bold"
            />

    </RelativeLayout>


    </ScrollView>

</RelativeLayout>







