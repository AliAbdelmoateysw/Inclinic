<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/card_ad_diagnosis_background"
tools:context=".ui.signup.SignUp">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_margin="24dp">

        <ImageView
            android:id="@+id/logoinLOgin"
            android:layout_width="254dp"
            android:layout_height="246dp"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo11" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logoinLOgin"
            android:layout_marginTop="30dp"
            android:background="@drawable/et_bg"
            android:hint="Name"
            android:inputType="text"
            android:padding="16dp"
            android:textColorHint="@color/login_form_details" />


        <EditText
            android:id="@+id/Usernaamee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_bg"
            android:hint="Username"
            android:inputType="text"
            android:padding="16dp"
            android:textColorHint="@color/login_form_details" />

        <EditText
            android:id="@+id/Passwoord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Usernaamee"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_bg"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColorHint="@color/login_form_details" />


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Passwoord"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_bg"
            android:hint="E-Mail"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:textColorHint="@color/login_form_details" />
<!--
        <EditText
            android:id="@+id/ED_userrole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_bg"
            android:hint="User Role"
            android:inputType="text"
            android:padding="16dp"
            android:textColorHint="@color/login_form_details" />

-->

        <Button
            android:id="@+id/signupbtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_bg"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@color/login_form_details_medium" />

        <View
            android:id="@+id/footerline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/signupbtn"
            android:background="#fff" />

        <LinearLayout
            android:layout_below="@+id/footerline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_marginLeft="80dp"
                android:textColor="@color/login_form_details"
                android:text="@string/have_an_account" />

            <TextView
                android:id="@+id/textView_login"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="@string/login"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
</RelativeLayout>