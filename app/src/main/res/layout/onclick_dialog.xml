<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:padding="8dp"
    android:background="@mipmap/clip_art1"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin16dp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:text="Details of Appointment"
        android:textStyle="bold"
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/day_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin16dp"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:text="Time Start :"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/timePicker_start_appointment_day_ui"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="Choose the time"
        android:padding="@dimen/margin16dp"
        android:background="@drawable/et_style_white"
        android:editable="false"
        android:focusable="false"
        android:layout_gravity="center"
        android:gravity="center"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="@dimen/margin16dp"
        android:gravity="center"
        android:text="Time End :"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/timePicker_end_appointment_day_ui"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="Choose the time"
        android:padding="@dimen/margin16dp"
        android:background="@drawable/et_style_white"
        android:editable="false"
        android:focusable="false"
        android:layout_gravity="center"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:weightSum="2"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/book_cancel"
            android:layout_width="180dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:backgroundTint="#FFF"
            android:textColor="#000"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/edittext_boorder"
            />

        <Button
            android:id="@+id/book_add"
            android:layout_width="180dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="Add"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:backgroundTint="#FFF"
            android:textColor="#000"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/edittext_boorder"
            />

    </LinearLayout>

</LinearLayout>