<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin16dp"
        android:elevation="@dimen/margin24dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:background="#FFF"
        android:clipChildren="false"
        android:layout_margin="@dimen/margin16dp"

        >
        <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/cardviewgradient"
        android:backgroundTint="#FFF"
        android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/imagerate_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin8dp"
                android:layout_marginBottom="@dimen/margin8dp"
                android:layout_marginStart="@dimen/margin12dp"
                android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rowappointmentuser_image"
            android:layout_width="@dimen/profileimg_size"
            android:layout_height="@dimen/profileimg_size"
            android:src="@drawable/ic_baseline_account_circle_24"
            android:transitionName="imgtransition"
            />

            </RelativeLayout>

            <TextView
                android:id="@+id/rowappointmentuser_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin16dp"
                android:layout_toEndOf="@id/imagerate_linear"
                android:fontFamily="@font/segoebold"
                android:layout_marginStart="@dimen/margin16dp"
                android:text="|||||||||||||||||||||"
                android:transitionName="nametransition"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawableStart="@drawable/verified_user_24"
                android:drawablePadding="@dimen/margin8dp"
                android:layout_marginEnd="@dimen/margin8dp"
                android:textColor="#000"
                />

                <TextView
                    android:id="@+id/rowappointmentuser_specialization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/margin12dp"
                    android:layout_marginStart="@dimen/margin16dp"
                    android:layout_marginTop="@dimen/margin4dp"
                    android:layout_below="@id/rowappointmentuser_name"
                    android:layout_toEndOf="@id/imagerate_linear"
                    android:fontFamily="@font/segousemibold"
                    android:text="||||||||||||||||||||||"
                    android:gravity="center"
                    android:maxLines="1"
                    android:transitionName="specializetransition"
                    android:ellipsize="end"
                    android:layout_marginEnd="@dimen/margin8dp"
                    android:drawableStart="@drawable/ic_baseline_business_center_24"
                    android:drawablePadding="@dimen/margin4dp"
                    android:textColor="#5F5F5F"
                    />
            <TextView
                android:id="@+id/rowappointmentuser_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/margin12dp"
                android:fontFamily="@font/segousemibold"
                android:layout_marginStart="@dimen/margin16dp"
                android:layout_below="@id/rowappointmentuser_specialization"
                android:layout_toEndOf="@id/imagerate_linear"
                android:text="||||||||||||||||||||||"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:transitionName="locationtransition"
                android:layout_marginEnd="@dimen/margin8dp"
                android:drawableStart="@drawable/location_24"
                android:drawablePadding="@dimen/margin4dp"
                android:textColor="#5F5F5F"
                />
            <TextView
                android:id="@+id/rowappointmentuser_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/margin12dp"
                android:layout_marginStart="@dimen/margin16dp"
                android:layout_below="@id/rowappointmentuser_location"
                android:layout_toEndOf="@id/imagerate_linear"
                android:text="||||||||||||||||||||||"
                android:fontFamily="@font/segousemibold"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawableStart="@drawable/ic_baseline_date_range_24"
                android:drawablePadding="@dimen/margin4dp"
                android:textColor="#5F5F5F"
                />
            <TextView
                android:id="@+id/rowappointmentuser_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/margin12dp"
                android:layout_marginStart="@dimen/margin16dp"
                android:layout_below="@id/rowappointmentuser_date"
                android:layout_toEndOf="@id/imagerate_linear"
                android:text="||||||||||||||||||||||"
                android:fontFamily="@font/segousemibold"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawableStart="@drawable/ic_baseline_access_time_24"
                android:drawablePadding="@dimen/margin4dp"
                android:textColor="#5F5F5F"
                />
            <TextView
                android:id="@+id/rowappointmentuser_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/margin12dp"
                android:layout_marginEnd="@dimen/margin16dp"

                android:layout_below="@id/rowappointmentuser_time"
                android:text="135.0 L.E"
                android:fontFamily="@font/segoebold"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:maxLines="1"
                android:transitionName="pricetransition"
                android:ellipsize="end"
                android:textColor="@color/colorPrimary"
                />

            <Button
                android:layout_width="@dimen/edittxt_width"
                android:layout_height="@dimen/margin48dp"
                android:background="@drawable/cardviewgradient"
                android:backgroundTint="#F11C1C"
                android:text="Cancel Appointment"
                android:textAllCaps="false"
                android:elevation="@dimen/margin12dp"
                android:textColor="@color/whiteTextColor"
                android:layout_below="@id/rowappointmentuser_price"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin16dp"
                android:layout_marginBottom="@dimen/margin12dp"
                android:id="@+id/rowappointmentuser_cancelbtn"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>