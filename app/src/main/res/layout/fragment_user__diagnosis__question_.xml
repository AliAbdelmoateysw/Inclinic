<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".uiD.user_diagnosis.User_Diagnosis_Question_Fragment"
android:background="@color/colorAccent"
    android:id="@+id/fragment_user_diagnosis_id">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="840dp"
        android:layout_margin="24dp">

        <ImageView
            android:id="@+id/logoinLOgin"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/start" />


        <TextView
            android:id="@+id/TxtQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/logoinLOgin"
            android:textColor="@color/login_form_details" />

        <Button
            android:id="@+id/BtnT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TxtQ"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_bg"
            android:text="no "
            android:textAllCaps="false"
            android:textColor="@color/login_form_details" />

        <Button
            android:id="@+id/BtnF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BtnT"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_bg"
            android:text="no "
            android:textAllCaps="false"
            android:textColor="@color/login_form_details"/>

        <Button
            android:id="@+id/BtnA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BtnF"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_bg"
            android:text="no "
            android:textAllCaps="false"
            android:textColor="@color/login_form_details"/>



        <Button
            android:id="@+id/BtnB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BtnA"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_bg"
            android:text="no "
            android:textAllCaps="false"
            android:textColor="@color/login_form_details"/>


        <ImageView
            android:id="@+id/BtnBack"
            android:layout_width="54dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/back" />


        <Button
            android:id="@+id/Btnnewdiagnosis"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_bg"
            android:text="New Diagnosis "
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/testoooo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="testooo"
            android:layout_marginLeft="130dp"
            android:textColor="@color/white"/>

    </RelativeLayout>
</ScrollView>

</RelativeLayout>