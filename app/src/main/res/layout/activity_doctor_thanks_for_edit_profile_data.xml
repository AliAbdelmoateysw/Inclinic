<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".Admin.AllDoc.Doctor_thanks_for_edit_profile_data">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/Logo_Edit"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@mipmap/logo_white"
            android:layout_gravity="center"
            >
        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/Happy_Edit"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_baseline_sentiment_very_satisfied_24"
            android:layout_gravity="center"
            >
        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="16dp"
        >
        <TextView
            android:id="@+id/txt1_Edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Profile Done"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/margin32dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            >
        </TextView>
        <TextView
            android:id="@+id/txt2_Edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/margin24dp"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="you have successfully Change your profile in Inclinic Application . \n You Have to Restart The application \n Inclinic team work"
            >

        </TextView>

    </LinearLayout>

</LinearLayout>