<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".ui.admin_medical_analysis.Admin_Medical_Analysis_Add_Tab">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp">

            <TextView
                android:id="@+id/Add_M_Txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Medical Test Name:"
                android:textColor="@color/login_form_details"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/Add_M_MTA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/et_bg"
                android:hint="Medical Test Name:"
                android:padding="16dp"
                android:textColorHint="@color/login_form_details"
                android:layout_below="@id/Add_M_Txt1"
                />

            <TextView
                android:id="@+id/Add_M_Txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Test Code:"
                android:textColor="@color/login_form_details"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_below="@id/Add_M_MTA"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/Add_M_TC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/et_bg"
                android:hint="Test Code:"
                android:padding="16dp"
                android:textColorHint="@color/login_form_details"
                android:layout_below="@id/Add_M_Txt2"
                />

            <TextView
                android:id="@+id/Add_M_Txt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="First Range:"
                android:textColor="@color/login_form_details"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_below="@id/Add_M_TC"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/Add_M_FR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/et_bg"
                android:hint="First Range:"
                android:padding="16dp"
                android:textColorHint="@color/login_form_details"
                android:layout_below="@id/Add_M_Txt3"

                />

            <TextView
                android:id="@+id/Add_M_Txt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Last Range:"
                android:textColor="@color/login_form_details"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_below="@id/Add_M_FR"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/Add_M_LR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/et_bg"
                android:hint="Last Range:"
                android:padding="16dp"
                android:textColorHint="@color/login_form_details"
                android:layout_below="@id/Add_M_Txt4"

                />


            <TextView
                android:id="@+id/Add_M_Txt5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Low Description:"
                android:textColor="@color/login_form_details"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_below="@id/Add_M_LR"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/Add_M_LD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/et_bg"
                android:hint="Low Description:"
                android:padding="16dp"
                android:textColorHint="@color/login_form_details"
                android:layout_below="@id/Add_M_Txt5"
                />

            <TextView
                android:id="@+id/Add_M_Txt6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="High Description:"
                android:textColor="@color/login_form_details"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_below="@id/Add_M_LD"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/Add_M_HD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/et_bg"
                android:hint="High Description:"
                android:padding="16dp"
                android:textColorHint="@color/login_form_details"
                android:layout_below="@id/Add_M_Txt6"
                />


            <Button
                android:id="@+id/btn_Add_M"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Add_M_HD"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp"
                android:layout_marginBottom="38dp"
                android:background="@drawable/btn_bg"
                android:text="@string/add"
                android:textAllCaps="false"
                android:textColor="@color/login_form_details_medium"
                android:textSize="20dp"
                android:textStyle="bold"
                />

        </RelativeLayout>

    </ScrollView>

</FrameLayout>


