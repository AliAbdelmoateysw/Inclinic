<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#FFFFFF"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="3"
      android:background="@drawable/raious_logo"

      >
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@mipmap/logo_white"
          android:layout_gravity="center"
          android:layout_margin="@dimen/margin40dp"
          >

      </ImageView>

  </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin16dp"
                android:text="Email"
                android:layout_marginBottom="3dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/margin16dp"
                android:fontFamily="@font/segousemibold"/>

            <EditText
                android:id="@+id/ui_EmailAddress_EditText_LoginActivity"
                android:layout_width="@dimen/rowfav_height"
                android:layout_height="@dimen/margin48dp"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:hint="Enter E-mail"
                android:fontFamily="@font/segoe"
                android:textColor="#0A0A0A"
                android:drawablePadding="@dimen/margin8dp"
                android:paddingHorizontal="@dimen/margin12dp"
                android:textSize="@dimen/margin16dp"
                android:layout_marginHorizontal="26dp"
                android:background="@drawable/et_style"
                android:layout_marginVertical="8dp"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Password"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/margin16dp"
                android:fontFamily="@font/segousemibold"
                android:layout_marginVertical="8dp"

                />



            <EditText
                android:id="@+id/ui_Password_EditText_LoginActivity"
                android:layout_width="@dimen/rowfav_height"
                android:layout_height="@dimen/margin48dp"
                android:layout_gravity="center"
                android:singleLine="true"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="@color/whiteTextColor"
                android:fontFamily="@font/segoe"
                android:ellipsize="end"
                android:hint="Enter Password"
                android:textColorHint="#CBFFFFFF"
                android:background="@drawable/et_style"
                android:backgroundTint="@color/colorPrimaryDark"
                android:password="true"
                android:textSize="@dimen/margin16dp"
                android:drawablePadding="@dimen/margin8dp"
                android:paddingHorizontal="@dimen/margin12dp"
                android:layout_marginHorizontal="26dp"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawableRight="@drawable/ic_baseline_remove_red_eye_24"
                app:passwordToggleEnabled="true"
                />

            <CheckBox
                android:id="@+id/remember_me_ui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#0A0A0A"
                android:checked="true"
                android:buttonTint="#0A0A0A"
                android:layout_marginTop="10dp"
                android:text="Remember Me"
                android:visibility="gone"
                />


            <Button
                android:id="@+id/ui_login_btn"
                android:layout_width="@dimen/fragment_btn_size"
                android:layout_height="@dimen/margin48dp"
                android:text="@string/Login_Btn"
                android:textAllCaps="false"
                android:fontFamily="@font/segousemibold"
                android:textSize="@dimen/margin16dp"
                android:background="@drawable/edittext_boorder"
                android:layout_marginTop="@dimen/margin40dp"
                android:layout_marginBottom="@dimen/margin8dp"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:elevation="@dimen/margin16dp"
                />

            <TextView
                android:id="@+id/forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/margin12dp"
                android:fontFamily="@font/segoebold"
                android:text="Forget Password ?"
                />


            <ProgressBar
                android:id="@+id/main_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:visibility="gone"/>

        </LinearLayout>

    </ScrollView>





</LinearLayout>