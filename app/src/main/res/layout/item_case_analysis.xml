<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" android:padding="5dp"

    >

    <!-- ============ Card View   ================== -->

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            android:id="@+id/item_case_analysis_id"
            >


            <TextView
                android:id="@+id/ITxtpart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/new_material_Color"
                android:text="part"
                />

            <TextView
                android:id="@+id/ITxtpain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/new_material_Color"
                android:text="pain" />


            <TextView
                android:id="@+id/ITxtsymp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/new_material_Color"
                android:text="Symptoms" />
            <TextView
                android:id="@+id/ITxttreat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/new_material_Color"
                android:text="treatment" />



            <TextView
                android:id="@+id/ITxtage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/new_material_Color"
                android:text="age" />
            <TextView
                android:id="@+id/ITxtgender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/new_material_Color"
                android:text="gender" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/ITxthistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/new_material_Color"
                android:text="history" />
            <TextView
                android:id="@+id/ITxttimes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/new_material_Color"
                android:text="times" />
        </LinearLayout>

            <TextView
                android:id="@+id/ITxtinherted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/new_material_Color"
                android:text="inheritance" />
            <TextView
                android:id="@+id/ITxtcountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/new_material_Color"
                android:text="country" />

            <TextView
                android:id="@+id/ITxtexpected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/new_material_Color"
                android:text="expected" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- ==================================================== -->

</LinearLayout>