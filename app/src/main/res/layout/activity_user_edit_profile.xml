<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#FFFFFF"
    tools:context=".ui_activities_auth.user_signup.User_edit_profile">
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/raious_logo"
        android:layout_weight="1.2"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/logo_white"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            >

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        >
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.7"
        android:padding="8dp"
        android:gravity="center"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:text="Username"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name_ui_EditText_userEdit_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Username"
                android:textColor="#0A0A0A"
                android:layout_gravity="center"
                android:singleLine="true"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:ellipsize="end"
                android:padding="16dp"
                android:background="@drawable/et_style"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="16dp"
                android:drawableRight="@drawable/ic_baseline_person_outline_24"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:text="AGE"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/age_ui_EditText_userEdit_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Age"
                android:textColor="#0A0A0A"
                android:layout_gravity="center"
                android:singleLine="true"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="2"
                android:ellipsize="end"
                android:padding="16dp"
                android:background="@drawable/et_style"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="16dp"
                android:drawableRight="@drawable/ic_baseline_person_outline_24"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Phonenumber"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/phonenum_ui_EditText_userEdit_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Phonenumber"
                android:textColor="#0A0A0A"
                android:layout_gravity="center"
                android:singleLine="true"
                android:inputType="phone"
                android:maxLines="1"
                android:ellipsize="end"
                android:padding="16dp"
                android:maxLength="13"
                android:background="@drawable/et_style"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                android:drawableRight="@drawable/ic_baseline_local_phone_24"
                />

            <Button
                android:id="@+id/ui_btn_submit_ui_userEdit_profile"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Confirm Edit"
                android:textSize="18dp"
                android:textColor="#FFF"
                android:background="@drawable/edittext_boorder"
                android:textAllCaps="false"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:elevation="8dp"

                />
            <ProgressBar
                android:id="@+id/main_progress_userEdit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                />



        </LinearLayout>



    </ScrollView>




</LinearLayout>

