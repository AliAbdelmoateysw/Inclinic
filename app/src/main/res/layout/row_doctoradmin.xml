<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin16dp"
        android:elevation="@dimen/margin24dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:background="#FFF"
        android:clipChildren="false"
        android:layout_margin="@dimen/margin16dp"
        app:cardElevation="@dimen/margin24dp"
        >
        <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/cardviewgradient"
        android:backgroundTint="#FFF"
        android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/imagerateadmin_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin8dp"
                android:layout_marginBottom="@dimen/margin8dp"
                android:layout_marginStart="@dimen/margin12dp"
                android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rowdoctoradmin_image"
            android:layout_width="@dimen/profileimg_size"
            android:layout_height="@dimen/profileimg_size"
            android:src="@drawable/ic_baseline_account_circle_24"
            />

                <TextView
                    android:id="@+id/rowdoctoradmin_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age: "
                    android:layout_gravity="center"
                    android:fontFamily="@font/segousemibold"
                    android:textColor="@color/blackTextColor"/>

            </LinearLayout>

    <TextView
        android:id="@+id/rowdoctoradmin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin16dp"
        android:layout_toEndOf="@id/imagerateadmin_linear"
        android:fontFamily="@font/segousemibold"
        android:layout_marginStart="@dimen/margin16dp"
        android:maxLines="1"
        android:layout_marginEnd="@dimen/margin8dp"
        android:ellipsize="end"
        android:text="|||||||||||||||||||||"
        android:textColor="#000"
        />

                <TextView
                    android:id="@+id/rowdoctoradmin_specialization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/margin12dp"
                    android:layout_marginStart="@dimen/margin16dp"
                    android:layout_marginTop="@dimen/margin4dp"
                    android:layout_below="@id/rowdoctoradmin_name"
                    android:layout_toEndOf="@id/imagerateadmin_linear"
                    android:fontFamily="@font/segoe"
                    android:maxLines="1"
                    android:layout_marginEnd="@dimen/margin8dp"
                    android:ellipsize="end"
                    android:text="||||||||||||||||||||||"
                    android:gravity="center"
                    android:drawableStart="@drawable/ic_outline_business_center_24"
                    android:drawablePadding="@dimen/margin4dp"
                    android:textColor="#8A8A8A"
                    />
            <TextView
                android:id="@+id/rowdoctoradmin_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/margin12dp"
                android:fontFamily="@font/segoe"
                android:layout_marginStart="@dimen/margin16dp"
                android:layout_below="@id/rowdoctoradmin_specialization"
                android:layout_toEndOf="@id/imagerateadmin_linear"
                android:text="||||||||||||||||||||||"
                android:gravity="center"
                android:maxLines="1"
                android:layout_marginEnd="@dimen/margin8dp"
                android:ellipsize="end"
                android:drawableStart="@drawable/ic_outline_location_on_24"
                android:drawablePadding="@dimen/margin4dp"
                android:textColor="#8A8A8A"
                />
            <TextView
                android:id="@+id/rowdoctoradmin_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/margin12dp"
                android:layout_marginStart="@dimen/margin16dp"
                android:layout_below="@id/rowdoctoradmin_location"
                android:layout_toEndOf="@id/imagerateadmin_linear"
                android:text="||||||||||||||||||||||"
                android:fontFamily="@font/segoe"
                android:gravity="center"
                android:maxLines="1"
                android:layout_marginEnd="@dimen/margin8dp"
                android:ellipsize="end"
                android:drawableStart="@drawable/ic_outline_phone_24"
                android:drawablePadding="@dimen/margin4dp"
                android:textColor="#8A8A8A"
                />
            <TextView
                android:id="@+id/rowdoctoradmin_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/margin12dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/margin8dp"
                android:layout_marginStart="@dimen/margin16dp"
                android:layout_below="@id/rowdoctoradmin_phone"
                android:layout_toEndOf="@id/imagerateadmin_linear"
                android:text="||||||||||||||||||||||||||||||||||||||||||||"
                android:fontFamily="@font/segoe"
                android:gravity="start"
                android:drawableStart="@drawable/ic_outline_info_24"
                android:drawablePadding="@dimen/margin4dp"
                android:textColor="#8A8A8A"
                />

            <TextView
                android:id="@+id/rowdoctoradmin_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/margin12dp"
                android:layout_marginEnd="@dimen/margin16dp"
                android:layout_marginBottom="@dimen/margin8dp"
                android:layout_below="@id/rowdoctoradmin_about"
                android:text="Price: |||||||||| L.E"
                android:layout_marginTop="@dimen/margin8dp"
                android:fontFamily="@font/segoebold"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                />

            <Button
                android:id="@+id/rowdoctoradmin_infobtn"
                android:layout_width="@dimen/edittxt_width"
                android:layout_height="@dimen/margin48dp"
                android:layout_below="@id/rowdoctoradmin_price"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin16dp"
                android:layout_marginBottom="@dimen/margin12dp"
                android:background="@drawable/cardviewgradient"
                android:backgroundTint="@color/colorPrimary"
                android:text="More information"
                android:textColor="#FFF"
                android:textAllCaps="false"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>