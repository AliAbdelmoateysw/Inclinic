<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" android:padding="5dp"

    >

    <!-- ============ Card View   ================== -->

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:clickable="true">
       <!-- android:foreground="?android:attr/selectableItemBackground"
        >   -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            android:id="@+id/item_diagnosis_id"
            >

            <TextView
                android:id="@+id/List_D_T_idx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/new_material_Color"
                android:text="Index"
                />

            <TextView
                android:id="@+id/List_D_T_Question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/new_material_Color"
                android:text="Question" />

            <TextView
                android:id="@+id/List_D_T_A1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/new_material_Color"
                android:text="Answer one:" />

            <TextView
                android:id="@+id/List_D_T_A2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/new_material_Color"
                android:text="Answer two:" />



            <TextView
                android:id="@+id/List_D_T_A3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/new_material_Color"
                android:text="Answer three:" />
            <TextView
                android:id="@+id/List_D_T_A4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/new_material_Color"
                android:text="Answer four:" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- ==================================================== -->

</LinearLayout>



