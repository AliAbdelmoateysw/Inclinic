<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Doctor.ui.Profile.DocProfileFragment" >

    <LinearLayout
        android:id="@+id/setting_linear_doctor_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="@dimen/margin16dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_doctor_home_ui"
                android:layout_width="@dimen/profileimg_size"
                android:layout_height="@dimen/profileimg_size"
                android:src="@drawable/ic_baseline_person_pin_24"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/name_doctor_home_ui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segousemibold"
                    android:layout_marginStart="@dimen/margin16dp"
                    android:text="Doctor Name"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/margin24dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/specialization_doctor_home_ui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/margin12dp"
                    android:layout_marginStart="@dimen/margin16dp"
                    android:layout_marginTop="@dimen/margin4dp"
                    android:layout_below="@id/rowdoctor_name"
                    android:layout_toEndOf="@id/imagerate_linear"
                    android:fontFamily="@font/segoe"
                    android:text="||||||||||||||||||||||"
                    android:gravity="center"
                    android:drawableStart="@drawable/ic_baseline_business_24"
                    android:drawablePadding="@dimen/margin4dp"
                    android:textColor="#ffffff"
                    />

                <TextView
                    android:id="@+id/location_doctor_home_ui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/margin12dp"
                    android:fontFamily="@font/segoe"
                    android:layout_marginStart="@dimen/margin16dp"
                    android:text="Location Doctor"
                    android:gravity="center"
                    android:drawableStart="@drawable/ic_baseline_location_on_24"
                    android:drawablePadding="@dimen/margin4dp"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>



        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin40dp"
            android:background="@drawable/et_style_white"
            android:text="Change Information"
            android:layout_marginTop="@dimen/margin8dp"
            android:id="@+id/changeInfo_doctor_doctor_home_ui"
            android:textColor="#ffffff"
            >
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin40dp"
            android:background="@drawable/et_style_white"
            android:text="LOGOUT"
            android:layout_marginTop="@dimen/margin8dp"
            android:id="@+id/logout_doctor_home_ui"
            android:textColor="#ffffff"
            >
        </Button>


    </LinearLayout>
</LinearLayout>