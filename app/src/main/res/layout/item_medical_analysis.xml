<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" android:padding="5dp"

    >

    <!-- ============ Card View   ================== -->

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            android:id="@+id/item_medical_analysis_id"
            >


            <TextView
                android:id="@+id/List_M_T_MTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/new_material_Color"
                android:text="Medical Test Name:"
                />

            <TextView
                android:id="@+id/List_M_T_TC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/new_material_Color"
                android:text="Test Code:" />


            <TextView
                android:id="@+id/List_M_T_FR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/new_material_Color"
                android:text="First Range:" />

            <TextView
                android:id="@+id/List_M_T_LR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/new_material_Color"
                android:text="Last Range:" />


            <TextView
                android:id="@+id/List_M_T_LD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/new_material_Color"
                android:text="Low Description:" />
            <TextView
                android:id="@+id/List_M_T_HD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/new_material_Color"
                android:text="High Description:" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- ==================================================== -->

</LinearLayout>


