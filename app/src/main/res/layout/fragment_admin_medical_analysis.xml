<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
app:layout_constraintBottom_toTopOf="parent"
android:orientation="vertical"
    >

<com.google.android.material.tabs.TabLayout
    android:id="@+id/A_Medical_Analysis_tabLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    app:tabGravity="fill"
    app:tabIndicatorColor="@color/AD_card_PrimaryDark"
    app:tabMode="fixed"
    app:tabTextColor="#FFF"
    >

    <com.google.android.material.tabs.TabItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/A_Medical_Analysis_Add_Tab"
        android:icon="@drawable/ic_add"
        android:text="@string/add"
        />

    <com.google.android.material.tabs.TabItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/A_Medical_Analysis_Update_Tab"
        android:icon="@drawable/ic_edit"
        android:text="@string/update"
        />




</com.google.android.material.tabs.TabLayout>

<androidx.viewpager.widget.ViewPager

    android:id="@+id/A_Medical_Analysis_ViewPager"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</androidx.viewpager.widget.ViewPager>


</LinearLayout>


